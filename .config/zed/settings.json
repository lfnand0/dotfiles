// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `zed: Open Default Settings` command
// from the command palette
{
  "telemetry": {
    "metrics": false
  },
  "ui_font_family": "JetBrainsMono Nerd Font",
  "buffer_font_family": "JetBrainsMono Nerd Font",
  "ui_font_weight": 200,
  "buffer_font_weight": 200,
  "gutter": {
    "code_actions": false,
    "folds": true
  },
  "ui_font_size": 16,
  "buffer_font_size": 16,
  "theme": {
    "mode": "system",
    "light": "dex",
    "dark": "dex"
  },
  "languages": {
    "TSX": {
      "tab_size": 2
    },
    "TypeScript": {
      "tab_size": 2
    },
    "JavaScript": {
      "tab_size": 2,
      "formatter": {
        "external": {
          "command": "prettier",
          "args": [
            "--config",
            "/home/dex/.config/zed/prettier.json",
            "--write",
            "${file}"
          ]
        }
      },
      "format_on_save": {
        "external": {
          "command": "prettier",
          "args": [
            "--config",
            "/home/dex/.config/zed/prettier.json",
            "--write",
            "${file}"
          ]
        }
      }
    },
    "SCSS": {
      "tab_size": 2
    }
  }
}
